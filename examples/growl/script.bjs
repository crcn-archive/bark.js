var bark = Bark();

bark.
register("notify").
max(3).
classes({ notification: "alert" }).
options({ ok: "Yes!", cancel: "No" }).
layout({ right: 10, top: 10 }).
transitionIn({ left: 200, opacity: 0 }, { left: 0, opacity: 1 }).
transitionOut({ }, { opacity: 0 }).
closeAfterTime(4000).
template(templateHtml);


var count = 0;

function notify() {
	if(count++ > 10) return;

	bark.notify("hello world! " + count);

	setTimeout(notify, 1000);
}

notify();